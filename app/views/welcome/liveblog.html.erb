<head>
	  <script type="text/javascript"
      src="http://maps.googleapis.com/maps/api/js?libraries=geometry&key=AIzaSyAq5jqy6DxgQBkk4KoTPgqEk2Pcwc0WfwE&sensor=False"></script>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
    <style type="text/css">
      html { height: 100% }
      body { height: 100%; margin: 30px; padding: 30px }
      #map_canvas { height: 100% }
    </style>
</head>


<h1>Leaderboard</h1>
<div class="distance_leaderboard">
  <h2>Distance</h2>
  <ol>
    <% @distancerank.each do |pos| %>
      <li>
        team: <%= pos.team.teamname %>
        distance: <%= pos.distance %>km
      </li>
    <% end -%>  
  </ol>

  <h2>Revenue</h2>
  <ol>
    <li><%=@cashperteam[0][0] %>: <%=@cashperteam[0][1] %>€</li>
    <li><%=@cashperteam[1][0] %>: <%=@cashperteam[1][1] %>€</li>
    <li><%=@cashperteam[2][0] %>: <%=@cashperteam[2][1] %>€</li>
  </ol>

</div>




<div id="map_canvas" style="width:100%; height:100%"></div>


<script>
	$(document).ready(function(){
		var liveblogInstance = window.liveblogInstance = new Liveblog();
  		liveblogInstance.drawMap();
  		liveblogInstance.getData();	
  	});
</script>
