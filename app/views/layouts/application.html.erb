<!DOCTYPE html>
<html>
<head>
  <title>Breakout</title>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />


</head>
<body>


<div id="nav-bar-background">

	<div class="row">
		<div id="navbar" class="col-sm-7">
			<% if session[:current_team_id].present? %>
				<ul class="nav nav-tabs baritems">
				  <li id="liveblog-nav" role="presentation"><a href="#">Liveblog</a></li>
				  <li id="teams-nav" role="presentation"><a href="teams">Teams</a></li>
				  <li id="sponsor-nav" role="presentation"><a href="teams/:current_team_id/edit">Edit</a></li>
				  <li id="update-nav" role="presentation"><a href="teams/:current_team_id/positions/new#">Update Position</a></li>
				</ul>

			<%else %>

				<ul class="nav nav-tabs baritems">
				  <li id="liveblog-nav" role="presentation"><a href="#">Liveblog</a></li>
				  <li id="teams-nav" role="presentation"><a href="teams">Teams</a></li>
				  <li id="sponsor-nav" role="presentation"><a href="#">Sponsor</a></li>
				</ul>

			<% end %>
		</div>



		<div id="login_logout" class="col-sm-5">
			<% if session[:current_team_id].present? %>
				<%= render "layouts/logout_form" %>
			<% else %>
				<%= render "layouts/login_form" %>
			<% end %>
		</div>

	</div>
</div>


<% flash.map do |flash_key, flash_message| %>
	<%= content_tag :div, flash_message, class: "alert alert-#{flash_key}", id: "login_alert", role: "alert" %> 
<% end %>



<%= yield %>





</body>
</html>
