<div class="yield home2">



<h4>Here you can edit the Teams Information</h4>


<%= form_for @team do |f| %>
	<div class="row">
		<div class="col-sm-3 form">
		   <h4>Player 1</h4>
		   <div class="form-group">
		      <%= label_tag :prename %>
		      <%= text_field_tag "team[players][][prename]", @team.players[0].prename, class: "form-control"%>
		   </div>
		   <div class="form-group">
		      <%= label_tag :surname %>
		      <%= text_field_tag "team[players][][surname]", @team.players[0].surname, class: "form-control"  %>
		   </div>
		   <div class="form-group">
		      <%= label_tag :age %>
		      <%= number_field_tag "team[players][][age]", @team.players[0].age, class: "form-control"%>
		   </div>
		   <div class="form-group">
		      <%= label_tag :email %>
		      <%= text_field_tag "team[players][][email]", @team.players[0].email, class: "form-control"  %>
		   </div>
		   <div class="form-group">
		      <%= label_tag :phone %>
		      <%= number_field_tag "team[players][][phone]", @team.players[0].phone, class: "form-control"  %>
		   </div>
		</div>


		<div class="col-sm-3 form">
		<h4>Player 2</h4>
			<div class="form-group">
			  <%= label_tag :prename %>
		      <%= text_field_tag "team[players][][prename]", @team.players[1].prename, class: "form-control"  %>
		    </div>
		    
		    <div class="form-group">
		      <%= label_tag :surname %>
		      <%= text_field_tag "team[players][][surname]", @team.players[1].surname, class: "form-control"  %>
		    </div>
		    
		    <div class="form-group">
		      <%= label_tag :age %>
		      <%= number_field_tag "team[players][][age]", @team.players[1].age, class: "form-control"  %>
		    </div>
		    
		    <div class="form-group">
		      <%= label_tag :email %>
		      <%= text_field_tag "team[players][][email]", @team.players[1].email, class: "form-control"  %>
		    </div>
		    
		    <div class="form-group">
		      <%= label_tag :phone %>
		      <%= number_field_tag "team[players][][phone]", @team.players[1].phone, class: "form-control"  %>
		    </div>
		</div>

		<div class="col-sm-3">
		<h4>Team</h4>
			<div class="form-group">
			   <%=f.label :teamname %>
			   <%=f.text_field :teamname, class: "form-control" %>
			</div>
			
			<%= f.submit "Change", class: "btn btn-success" %>
		</div>   
	</div>


<% end %>
</div>
